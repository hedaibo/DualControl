<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
>

    <ImageView
        android:id="@+id/iv_device"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@mipmap/device_icon"
        />
    <TextView
        android:id="@+id/tv_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_device"
        android:layout_toEndOf="@id/iv_device"
        android:singleLine="true"
        android:text="SM10MD1_6688"
        android:textColor="@drawable/black"
        android:textSize="@dimen/tv_size" />
    <TextView
        android:id="@+id/tv_list_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_device"
        android:layout_toEndOf="@id/iv_device"
        android:singleLine="true"
        android:text="192.168.1.102"
        android:textColor="@drawable/black"
        android:textSize="@dimen/tv_ip_size" />

</RelativeLayout>
